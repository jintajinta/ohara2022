<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num2"
        android:layout_width="100dp"
        android:layout_height="101dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num5"
        app:layout_constraintEnd_toStartOf="@+id/num3"
        app:layout_constraintStart_toEndOf="@+id/num1"
        app:strokeColor="#FBFBFB" />

    <Button
        android:id="@+id/num0"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="6dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="107dp"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/num8"
        android:layout_width="100dp"
        android:layout_height="101dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintEnd_toStartOf="@+id/num9"
        app:layout_constraintStart_toEndOf="@+id/num7" />

    <Button
        android:id="@+id/num7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="106dp"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="47dp"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num9"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/num4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="51dp"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num5"
        android:layout_width="100dp"
        android:layout_height="101dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num8"
        app:layout_constraintEnd_toStartOf="@+id/num6"
        app:layout_constraintStart_toEndOf="@+id/num4" />

    <Button
        android:id="@+id/num1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="2dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="47dp"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/num6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="6dp"
        android:text="＝"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="7dp"
        android:text="＋"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/calculatedvalue"
        android:layout_width="341dp"
        android:layout_height="99dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="35dp"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>